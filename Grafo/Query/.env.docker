# Environment variables for Grafo MCP Server running in Docker
# Copy this file to .env or set these variables in docker-compose.mcp.yml

# MongoDB Configuration
# Nota: usar 'host.docker.internal' cuando MongoDB está en el host
# Usar 'grafo-mongodb' cuando MongoDB está en Docker (red compartida)
MONGODB_CONNECTION_STRING=mongodb://grafo-mongodb:27019/
MONGODB_DATABASE=GraphDB
MONGODB_PROJECTS_COLLECTION=projects

# Alternative: MongoDB en el host
# MONGODB_CONNECTION_STRING=mongodb://host.docker.internal:27019/

# Logging
LOG_LEVEL=INFO

# Graph Version Filtering (FALLBACK - Not recommended)
# RECOMMENDED: Specify version in client mcp.json URL: ?version=7.10.3
# This variable is only used when the client doesn't specify ?version= in the URL
# Leave empty to query all versions when client doesn't specify
GRAFO_DEFAULT_VERSION=

# Python
PYTHONUNBUFFERED=1
