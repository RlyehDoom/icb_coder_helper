# MongoDB Configuration for Query Service Tests
# Copy this file to .env and update with your values

# MongoDB Connection String
# Format: mongodb://[username:password@]host[:port]/[database]
MONGODB_CONNECTION_STRING=mongodb://InfocorpAI:InfocorpAI2025@localhost:27017/

# MongoDB Database Name
MONGODB_DATABASE=GraphDB

# MongoDB Collection Name for Projects
MONGODB_PROJECTS_COLLECTION=projects

# Server Configuration (for running the service)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Level
LOG_LEVEL=INFO

# Example configurations for different environments:

# Local Development (no authentication):
# MONGODB_CONNECTION_STRING=mongodb://localhost:27017/

# Local Development (with authentication):
# MONGODB_CONNECTION_STRING=mongodb://user:password@localhost:27017/

# Docker Compose:
# MONGODB_CONNECTION_STRING=mongodb://mongodb:27017/

# MongoDB Atlas (cloud):
# MONGODB_CONNECTION_STRING=mongodb+srv://user:password@cluster.mongodb.net/

# MongoDB with replica set:
# MONGODB_CONNECTION_STRING=mongodb://host1:27017,host2:27017,host3:27017/?replicaSet=rs0

