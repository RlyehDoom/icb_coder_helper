# MongoDB Configuration - PRODUCTION
# Optimized connection string with TLS and authentication
MONGODB_CONNECTION_STRING=mongodb://user:pass@207.244.249.22:28101/GraphDB?authSource=admin&tls=true&tlsAllowInvalidCertificates=true&tlsAllowInvalidHostnames=true
MONGODB_DATABASE=GraphDB
MONGODB_PROJECTS_COLLECTION=projects
MONGODB_STATES_COLLECTION=processing_states

# TLS Configuration (optional - connection string handles TLS)
MONGODB_TLS_CERT_FILE=/app/certs/client.pem
MONGODB_TLS_INSECURE=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
SERVER_RELOAD=false

# CORS
CORS_ORIGINS=*

# Authentication
QUERY_API_KEY=
ENABLE_AUTH=false

# Cache
ENABLE_CACHE=true
CACHE_TTL=300

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=production

# Graph Version Filtering (FALLBACK - Not recommended)
# RECOMMENDED: Each client specifies version in their mcp.json URL: ?version=7.10.3
# This variable is only used when clients don't specify ?version= in the URL
# Production environments should use client-side version specification for flexibility
# Example client config:
#   "url": "http://server-ip:8083/sse?version=7.10.3"
GRAFO_DEFAULT_VERSION=

# Notes:
# - Copy this file to .env.production and update with actual values
# - The certificate should be at ../Certs/prod/client.pem (when running locally)
# - When running in Docker, the certificate is mounted to /app/certs/client.pem
# - Connection string parameters:
#   * authSource=admin - Authentication database
#   * tls=true - Enable TLS/SSL
#   * tlsAllowInvalidCertificates=true - Accept self-signed certificates
#   * tlsAllowInvalidHostnames=true - Allow hostname mismatch
#   * /GraphDB - Database name in URI path
