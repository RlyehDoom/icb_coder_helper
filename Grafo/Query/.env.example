# MongoDB Configuration (compatible con IndexerDb)
# Default: No authentication (simplifies Docker setup)
# Puerto 27019 - instancia compartida
# For production with auth: mongodb://username:password@localhost:27019/
MONGODB_CONNECTION_STRING=mongodb://localhost:27019/
MONGODB_DATABASE=GraphDB
MONGODB_PROJECTS_COLLECTION=projects
MONGODB_STATES_COLLECTION=processing_states

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
SERVER_RELOAD=true

# CORS
CORS_ORIGINS=*

# Authentication
QUERY_API_KEY=
ENABLE_AUTH=false

# Cache
ENABLE_CACHE=true
CACHE_TTL=300

# Logging
LOG_LEVEL=INFO

# Graph Version Filtering (FALLBACK - Not recommended)
# RECOMMENDED: Specify version in mcp.json URL instead: ?version=7.10.3
# This variable is only used when the client doesn't specify ?version= in the URL
# Example client config:
#   "url": "http://localhost:8083/sse?version=7.10.3"
# Leave GRAFO_DEFAULT_VERSION empty to query all versions when client doesn't specify
GRAFO_DEFAULT_VERSION=
