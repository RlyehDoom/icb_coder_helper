# RoslynIndexer Environment Configuration
# Copy this file to .env and customize as needed
# All settings are optional - defaults will be used if not specified

# ============================================
# Solution Selection
# ============================================
# Path to default solution to analyze (if not using interactive mode)
# Leave empty for interactive repository/solution selection
DEFAULT_SOLUTION_PATH=

# ============================================
# Output Configuration
# ============================================
# Base directory for analysis output
DEFAULT_OUTPUT_DIR=./analysis-output

# Use repository name in output path (creates ./{REPO_NAME}_GraphFiles/)
# Set to false to always use DEFAULT_OUTPUT_DIR
USE_REPO_NAME_IN_OUTPUT=true

# Create subdirectory per solution within output directory
CREATE_SOLUTION_SUBDIR=true

# Output file format (json, xml, csv)
DEFAULT_OUTPUT_FORMAT=json

# ============================================
# Graph Generation
# ============================================
# Generate architectural graphs (always enabled - highly recommended)
GENERATE_GRAPHS=true

# Generate statistics CSV files
GENERATE_STATISTICS=true

# ============================================
# Analysis Options
# ============================================
# Enable verbose output by default
VERBOSE_MODE=false

# Filter symbol types (comma-separated: Class,Interface,Method,Property,Field,Enum,Struct)
# Leave empty to include all types
FILTER_SYMBOL_TYPES=

# Exclude projects matching regex patterns (comma-separated)
# Patterns are checked against both project name AND project path
# Examples:
#   - Exclude all test projects: .*\.Tests?$,.*\.UnitTests?$
#   - Exclude specific projects: MyProject\.Tests,AnotherProject\.IntegrationTests
#   - Exclude by path pattern: .*\\tests\\.*,.*\\TestProjects\\.*
EXCLUDE_PROJECTS_REGEX=

# ============================================
# File Naming
# ============================================
# Add timestamp to output filenames (e.g., analysis-20240115-143022.json)
INCLUDE_TIMESTAMP=false

# Custom prefix for output files (defaults to solution name if empty)
OUTPUT_FILE_PREFIX=

# ============================================
# Examples
# ============================================
# Example 1: Analyze specific solution, output to custom directory
# DEFAULT_SOLUTION_PATH=../Repo/Cloned/MyProject/Solution.sln
# DEFAULT_OUTPUT_DIR=./my-analysis
# USE_REPO_NAME_IN_OUTPUT=false

# Example 2: Interactive mode with repo-specific output
# DEFAULT_SOLUTION_PATH=
# USE_REPO_NAME_IN_OUTPUT=true
# VERBOSE_MODE=true

# Example 3: Filter and exclude specific projects
# FILTER_SYMBOL_TYPES=Class,Interface,Method
# EXCLUDE_PROJECTS_REGEX=.*\.Tests?$,.*\.Test$,.*\.TestProject$,.*\.IntegrationTests?$

# Example 4: Exclude all test, benchmark, and migration projects
# EXCLUDE_PROJECTS_REGEX=.*\.Tests?$,.*\.Benchmark.*,.*Migration.*,.*\.Mock.*

# ============================================
# Custom Variables (No code changes needed!)
# ============================================
# You can add ANY custom variable here without modifying C# code
# Access them in code using: EnvironmentConfig.Current.Get("YOUR_VAR_NAME")
#
# Examples:
# MY_CUSTOM_API_URL=https://api.example.com
# MAX_FILE_SIZE_MB=100
# ENABLE_EXPERIMENTAL_FEATURE=true
# DATABASE_CONNECTION_STRING=mongodb://localhost:27017
# REPORT_EMAIL=admin@example.com
#
# Access in code:
# var apiUrl = EnvironmentConfig.Current.Get("MY_CUSTOM_API_URL", "default-url");
# var maxSize = EnvironmentConfig.Current.GetInt("MAX_FILE_SIZE_MB", 50);
# var enabled = EnvironmentConfig.Current.GetBool("ENABLE_EXPERIMENTAL_FEATURE", false);

