{
  "name": "grafo-code-explorer",
  "displayName": "Grafo Code Explorer",
  "description": "Explore C# code relationships using Grafo knowledge graph with visual graph navigation",
  "version": "0.2.0",
  "publisher": "grafo",
  "author": {
    "name": "Jose Luis Yanez Rojas",
    "url": "https://joseluisyr.com"
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/RlyehDoom/icb_coder_helper"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "csharp",
    "code analysis",
    "graph",
    "dependencies",
    "cytoscape"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Grafo Code Explorer",
      "properties": {
        "grafo.apiUrl": {
          "type": "string",
          "default": "http://localhost:8081",
          "description": "Grafo Query Service API URL"
        },
        "grafo.graphVersion": {
          "type": "string",
          "default": "6.5.0",
          "description": "Graph version (e.g., 6.5.0)"
        },
        "grafo.maxDepth": {
          "type": "number",
          "default": 2,
          "description": "Max depth for graph traversal"
        }
      }
    },
    "commands": [
      {
        "command": "grafo.refreshAll",
        "title": "Grafo: Refresh All Views",
        "icon": "$(refresh)"
      },
      {
        "command": "grafo.checkConnection",
        "title": "Grafo: Check Connection"
      },
      {
        "command": "grafo.selectVersion",
        "title": "Grafo: Select Version",
        "icon": "$(versions)"
      },
      {
        "command": "grafo.showGraph",
        "title": "Grafo: Show Visual Graph",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "grafo.navigateToNode",
        "title": "Grafo: Navigate to Node"
      },
      {
        "command": "grafo.showOutput",
        "title": "Grafo: Show Output Console",
        "icon": "$(output)"
      },
      {
        "command": "grafo.clearOutput",
        "title": "Grafo: Clear Output Console"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "grafo-explorer",
          "title": "Grafo",
          "icon": "images/icon-sidebar.svg"
        }
      ]
    },
    "views": {
      "grafo-explorer": [
        {
          "type": "webview",
          "id": "grafo.graphView",
          "name": "Graph",
          "contextualTitle": "Visual Graph"
        },
        {
          "id": "grafo.impactView",
          "name": "Impact Analysis",
          "contextualTitle": "Who calls this?"
        },
        {
          "id": "grafo.dependenciesView",
          "name": "Dependencies",
          "contextualTitle": "What does this call?"
        },
        {
          "id": "grafo.classOverviewView",
          "name": "Class Overview",
          "contextualTitle": "Class metrics"
        },
        {
          "id": "grafo.overridableMethodsView",
          "name": "Overridable Methods",
          "contextualTitle": "Base class methods"
        },
        {
          "id": "grafo.implementationsView",
          "name": "Implementations",
          "contextualTitle": "Interface implementations"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "grafo.refreshAll",
          "when": "view =~ /^grafo\\./",
          "group": "navigation"
        },
        {
          "command": "grafo.selectVersion",
          "when": "view == grafo.classOverviewView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --out dist/"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
